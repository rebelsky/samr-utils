    "Son Volt",
    "St. Louis Jesuits",
    "Strength In Numbers",
    "String Cheese Incident",
    "Stumpy Joe",
    "Suddenly, Tammy!",
    "Suicidal Tendencies",
    "Sun 60",
    "Super Deluxe",
    "Susan's Room",
    "Swamp Dogg",
    "Swinging Steaks",
    "Syndicate Of Soul",

    "that dog",
    "Take 6",
    "Talking Heads",
    "Techno-Squid Eats Parliament",
    "Teenage Fanclub",
    "That Petrol Emotion",
    "Thelonious Monster",
    "These Days",
    "They Might Be Giants",
    "Thin White Rope",
    "Things That Fall Down",
    "Thinking Fellers Union Local 282",
    "Thirteen Moons",
    "Timbuk 3",

    "University Of Michigan Amazin' Blue",

    "Velvet Crush",

    "West Side Story Cast",
    "Whiskey Daredevils",
    "Wreckless Eric",

    "Yo La Tengo", 
    "Yonder Mountain String Band",
    "Young Fresh Fellows",
  );

  foreach my $skip (@skip) {
    if ($name eq $skip) {
      return $name;
    }
  } # foreach

  # Band names often part of Foo & ...
  if (($name =~ m/^His/) || ($name =~ m/^Her/)) {
    return $name;
  }

  # Band names that start with The
  elsif ($name =~ m/^The /) {
    $name =~ s/^The //;
    return "$name, The";
  }

  # Names with ampersands
  elsif ($name =~ m/ & /) {
    my @parts = split(/ & /, $name, 2);
    $parts[0] = fixName($parts[0]);
    $parts[1] = fixName($parts[1]);
    return "$parts[0] & $parts[1]";
  }

  # Quartets and Quintets and such
  elsif ( ($name =~ m/ Quartet$/) 
          || ($name =~ m/ Quintet$/)
          || ($name =~ m/ Sextet$/) 
          || ($name =~ m/ Band$/) ) {
    my $suffix = $name;
    $suffix =~ s/.* //;
    $name =~ s/ [^ ]*$//;
    return fixName($name) . " (" . $suffix . ")";
  }

  # Singleton
  elsif ($name !~ m/ /) {
    return $name;
  }

  # Everything else we assume is a proper name
  else {
    my @parts = split(/ /, $name);
    $last = pop @parts;
    return $last . ", " . join(' ', @parts);
  }
}
