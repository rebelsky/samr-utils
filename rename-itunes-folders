#!/usr/bin/perl

foreach my $dir (@ARGV) {
  $dir =~ s/\/$//;
  my $contents = `ls "$dir"`;
  my @contents = split(/\n/, $contents);
  # my $artist = fixName($dir);
  my $artist = $dir;
  foreach my $album (@contents) {
    print "$artist - $album\n";
    $newdir = "$artist - $album";
    rename "$dir/$album", $newdir;
    system("fixartist '$newdir'");
  }
  rmdir $dir;
} # foreach $dir

sub fixName($) {
  my $name = shift;

  # Things we ignore
  @skip = (
    "100 Flowers",
    "16 Horsepower",
    "17 Pygmies",
    "2 Minutes Hate",
    "21 Guns",
    "700 Miles",

    "A House",
    "Adam Ant",
    "Aerosmith",
    "Agnostic Front",
    "Alpha Stone",
    "Ambitious Lovers",
    "Anastasia Screamed",
    "Apache Dancers",
    "Arcade Fire",
